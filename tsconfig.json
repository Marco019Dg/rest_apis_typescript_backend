        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"], // Versi칩n de Javascript a compilar.
        "target": "ESNext", //Soporte para guardar datos en la Base de Datos por medio de clases.("EsNext" utiliza la versi칩n m치s reciente)
        "moduleResolution": "nodenext", //Soporte para guardar datos en la Base de Datos por medio de clases.
        "module": "NodeNext", //Soporte para guardar datos en la Base de Datos por medio de clases.
        "strict": false, // Modo estricto.
